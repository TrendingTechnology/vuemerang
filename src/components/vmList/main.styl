.vm-list
  width: 100%
  position relative
  padding: 5px
.vm-list--icon
  padding: 6px
  display: flex
  align-items: center
  justify-content: center
  i
    font-size: 1.2rem !important
.vm-list--header
  padding: 8px 0px
  font-weight: bold
  display: flex
  align-items: center
  justify-content: flex-start
  box-shadow: 0px 7px 7px -5px rgba(0,0,0,.08)
  margin-bottom: 5px

.vm-list--item
  border-bottom: 1px solid rgba(0,0,0,.08)
  padding: 5px
  display flex
  align-items: center
  justify-content: flex-start
.vm-list--slot
  margin-left: auto
.vm-list--title
  font-weight: bold
.vm-list--subtitle
  font-size: .8rem

for colorx, i in $vm-colors
  .vm-header-list-{colorx}
    color var(colorx, 1)
