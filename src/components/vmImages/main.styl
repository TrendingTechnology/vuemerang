random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.vm-images
  // background: rgb(14, 142, 25)
  display: flex
  align-items: flex-start
  justify-content: center
  &.notBorderRadius
    .vm-image, .con-vm-image
      border-radius: 0px !important
  &.alternating
    .vm-image
      &:nth-child(5n)
        width: calc(50% - 4px)
        float right
    &.notMargin
      .vm-image
        &:nth-child(5n)
          width: 50%
  &.notMargin
    .vm-image
      margin: 0px
      width: 25%

.vm-images--ul
  display: flex
  align-items: flex-start
  justify-content: flex-start
  flex-wrap: wrap
  margin: 0px
  padding: 10px
  width: 100%
.vm-image
  width calc(25% - 4px)
  height auto
  // padding-bottom: calc(25% - 8px)
  list-style none
  margin: 2px
  border-radius: 10px
  // overflow hidden
  transition: all .25s ease
  position relative
  float left
  backface-visibility: visible
  cursor pointer


  .con-vm-image
    overflow hidden
    width: 100%
    border-radius: 10px
    z-index 200
    position relative
  .imag-blur
    position absolute
    width: 100%
    bottom: 0px
    border-radius: 10px
    opacity 0
    z-index 100
    transform scale(1)
    filter: blur(5px)
    transition: all .25s ease
.vm-image--img
  background-position: center center;
  width: 100%
  padding-bottom: 100%
  display: block
  position relative
  transition: all .25s ease


.vm-images-hover-blur
  .vm-image
    &:hover
      transform: scale(1.04) translate(0, -2px)
      cursor pointer
      z-index 300
      .imag-blur
        opacity .8
        transform: scale(.9)
        filter: blur(5px)
        bottom: -10px

.vm-images-hover-zoom
  .vm-image
    &:hover
      .vm-image--img
          transform: scale(1.2)

.vm-images-hover-default
  .vm-image
    &:hover
      transform: scale(.9)
      .vm-image--img
          transform: scale(1.3)

.vm-images-hover-dark
  .vm-image
    &:hover
      background: rgba(0,0,0,1)
      border-radius: 20px
      .vm-image--img
          opacity .4
          border-radius: 20px

.vm-images-hover-scale
  .vm-image
    &:hover
      z-index 300
      transform scale(1.15)
      box-shadow: 0px 3px 15px 0px rgba(0,0,0,.3)

.vm-images-hover-curtain
  .vm-image
    overflow hidden
    &:after
      content: ''
      position: absolute
      left 0px
      top: 0px
      background: rgba(0,0,0,.5)
      width: 100%
      height 100%
      z-index 400
      border-radius: inherit
      // transform: scale(.8)
      transform: translate(0, -100%)
      opacity 0
      transition: all .25s ease
    .vm-image--img
      transform scale(1.2) translate(0, -10px)
    &:hover
      .vm-image--img
        transform scale(1.25) translate(0, 10px)
      &:after
        transform: scale(1) translate(0%)
        opacity 1


@media only screen and (max-width: 700px)
  .vm-image
    width: calc(33% - 4px)
@media only screen and (max-width: 550px)
  .vm-image
    width: calc(50% - 4px)
@media only screen and (max-width: 350px)
  .vm-image
    width: calc(100% - 4px)
