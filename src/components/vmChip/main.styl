.con-vm-chip
  background: rgb(240,240,240)
  border-radius: 20px
  float left
  display: flex
  align-items: center
  font-size .7rem
  justify-content: center
  margin-right: 2px
  margin-bottom: 3px
  min-height 28px
  padding-right 10px
  color: rgba(0,0,0,.7)
  position: relative
  &.closable
    padding-right: 0px
  &.con-color
    .con-vm-avatar
      background: rgba(255,255,255,.2)
  .con-vm-avatar
    width: 24px
    height 24px
    position relative
    display: block
    margin: 2px 0px
    transform: translate(-8px)
    display: flex
    align-items: center
    justify-content: center
    background: rgba(0,0,0,.15)
    .eva
      margin-top: 0px
      font-size: .8rem

.vm-chip--close
  width: 20px
  height 20px
  display: flex
  align-items: center
  justify-content: center
  border-radius: 50%
  border: 0px
  margin: 0px 4px
  cursor pointer
  background: rgba(0,0,0,.15)
  color: rgb(255,255,255)
  transition: all .3s ease
  &:hover
    background: $vm-colors[danger]
  i
    font-size: .9rem

.vm-chip--text
  display: flex
  align-items: center
  justify-content: center
  margin-left: 10px

.vm-chips--label
  padding-left 5px;
  font-size: .85rem
  color $vm-label-color

for colorx, i in $vm-colors
  .vm-chip-{colorx}
    background: var(colorx, 1)
  .vm-chips--label-{colorx}
    .vm-chips--label-span
      font-size: 0.8em
      font-style: italic
      color: var(colorx)
  .input-select-label-{colorx}--active
    color: var(colorx)


.con-chips
  width: 100%;
  /* background: rgb(136, 231, 39); */
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  box-shadow: 0px 2px 15px 0px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  overflow: hidden;
  padding: 5px;

.con-chips .con-vm-chip
  margin-top: 0px;
  margin-bottom: 0px;

.con-chips--input
  display: inline-block;
  flex:1;
  /* height: 30px; */
  padding: 9px;
  box-sizing: border-box;
  min-width: 80px;
  border: 0px;
  padding-left: 2px;

.con-chips--remove-all
  position: absolute;
  right: 0px;
  top: 50%;
  transform: translate(0,-50%);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
  cursor: pointer;
  transition: all .3s ease;

.con-chips--remove-all:hover
  color: var('danger', 1)

.no-items
  .con-chips--input
    padding-left: 10px !important;

.input-danger
  border: 1px solid var('danger', .4)

.input-success
  border: 1px solid var('success', .4)

.input-warning
  border: 1px solid var('warning', .4)
