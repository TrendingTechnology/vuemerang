.vm-navbar
  clear both
  display: flex
  align-items: center
  // padding: 0px 7px
  box-shadow: 0px 4px 20px 0px rgba(0,0,0,.05)
  width: 100%
  z-index: 10000
  position: relative
  button
    margin: 0px

.vm-navbar--item
  display block
  position relative
  transition: all .25s ease
  z-index: 1000
  &.is-active-item
    .vm-navbar-after
      width: 100%
  &:hover
    .vm-navbar-submenu
      opacity: 1
      visibility: visible

  a
    font-size: .8rem
    padding: 10px 12px
    display: block
    color inherit
    text-decoration: none !important
    position relative
    z-index: 100
    &:hover
      ~ .vm-navbar-after
        width: 100%
  .vm-navbar-after
    width: 0%
    height 2px
    left 50%
    bottom: 0px
    transform: translate(-50%)
    background: $vm-primary
    position: absolute
    transition: all .25s ease
    z-index: 10


.vm-navbar--title
  font-size: 1.1rem
  padding: 0px
  padding-left: 10px
  padding-right: 10px
  color: inherit
.vm-navbar--items
  position relative

.vm-navbar-submenu
  position: absolute
  visibility: hidden
  opacity: 0
  background: rgb(255,255,255)
  z-index: 1000
  padding-left 0px
  width: 200px
  .vm-navbar-after
    display: none
  .vm-navbar--items
    a
      text-align: left


// TYPE: FLAT

.vm-navbar-flat
  box-shadow: none
  .vm-navbar-after
    display: none

// TYPE: FUND

.vm-navbar-fund
  box-shadow: none
  .vm-navbar-after
    width 100%
    height 0%
    opacity: .1
  a
    &:hover
      ~ .vm-navbar-after
        height: 100%
  .vm-navbar--item
    &.is-active-item
      .vm-navbar-after
        height: 100%

// TYPE: BORDER

.vm-navbar-border
  box-shadow: none
  border 1px solid rgba(0,0,0,.05)
  .vm-navbar--item
    border-left 1px solid rgba(0,0,0,.05)
  .vm-navbar-after
    height: 1px
    bottom: -1px

// TYPE: GRADIENT
.vm-navbar-gradient
  .vm-navbar--item
    margin: 4px 3px
    a
      padding: 6px 12px
  .vm-navbar-after
    display: none

// TYPE: SHADOW
.vm-navbar-shadow
  box-shadow: none
  .vm-navbar--item
    background: rgba(0,0,0,.05)
    &.is-active-item
      background: rgb(255,255,255)
      border-radius: 4px
      box-shadow: 0px 5px 20px 0px rgba(0,0,0,.07)
  .vm-navbar-after
    display: none


for colorx in $vm-colors
  .vm-navbar
    .vm-navbar-item-{colorx}
      &.is-active-item
        color: $vm-colors[colorx]
      &:hover
        >a
          color: $vm-colors[colorx]

  .vm-navbar-submenu
    .vm-navbar-item-{colorx}
      &.is-active-item
        color: $vm-colors[colorx]
      &:hover
        color: $vm-colors[colorx]

  &.vm-navbar-gradient
    .vm-navbar-item-{colorx}
      border-radius: 4px
      &.is-active-item
        border-radius: 6px
        color rgb(255,255,255)
        background: rgb(100,0,100)
        if colorx == 'danger' {
          background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%)
        }
        else if colorx == 'dark' {
          background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%)
        }
        else {
          background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%)
        }
        text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.3)
