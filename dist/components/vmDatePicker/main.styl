// transition

.fadecalendar-enter-active
  transition: transform .2s, opacity .2s;

.fadecalendar-leave-active
  transition: transform .150s, opacity .150s;

.fadecalendar-enter, .fadecalendar-leave-to /* .fade-leave-active below version 2.1.8 */
  opacity: 0;
  transform: translate(0,0px) scale(0.950)
  box-shadow: 0px 10px 0px -5px rgba(0, 0, 0, 0);

.vm-datepicker
  display: inline-block;
  line-height: normal;
  &-confirm
    border-top: 1px solid #e8eaec;
    text-align: right;
    padding: 8px;
    clear: both;
  &-rel
    position: relative
    min-width: 220px;
  &--calendar
    width: max-content;
    overflow: visible;
    font-size: small;
    max-height: none;
    padding: 4px;
    padding-top: 6px;
    padding-left: 5px;
    padding-bottom: 6px;
    box-shadow: $vm-box-shadow;
    border-radius: 5px;
    position: absolute;
    z-index: 40001;
    background: $vm-background;
    .vm-datepicker-with-range
      .vm-datepicker-panel-content
        .vm-datepicker-cells
          .vm-datepicker-cells-cell-range:nth-child(1):before
            border-radius: 50%;
            color: red;
  &-panel-sidebar
    width: 92px;
    float: left;
    margin-left: -92px;
    position: absolute;
    top: 0;
    bottom: 0;
    background: #fff;
    border-right: 1px solid #e8eaec;
    border-radius: 4px 0 0 4px;
    overflow: auto;
    -webkit-box-shadow: -5px 5px 20px 0px rgba(0,0,0,0.04);
    box-shadow: -5px 5px 20px 0px rgba(0,0,0,0.04);
    .vm-datepicker-panel-shortcut
      padding: 6px 15px;
      transition: all .2s ease-in-out;
      cursor: pointer;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
  &-panel-content
    float: left;
  &-cells-year
    .vm-datepicker-cells-cell
      width: 40px !important;
      height: 28px !important;
      line-height: 28px !important;
      margin: 10px 12px !important;
      border-radius: 3px !important;
      &:hover em
        background: #e1f0fe;
        border-radius: 3px !important;
      em
        width: 40px !important;
        height: 28px !important;
        line-height: 28px !important;
        margin: 0 !important;
  &-cells-month
    .vm-datepicker-cells-cell
      width: 40px !important;
      height: 28px !important;
      line-height: 28px !important;
      margin: 10px 12px !important;
      border-radius: 3px !important;
      &:hover em
        background: #e1f0fe;
        border-radius: 3px !important;
      em
        width: 40px !important;
        height: 28px !important;
        line-height: 28px !important;
        margin: 0 !important;
  &-cells-show-week-numbers
    width: 224px !important
  &-cells
    width: 196px;
    margin: 10px;
    white-space: normal;
    .vm-datepicker-cells-header span
      line-height: 24px;
      text-align: center;
      margin: 2px;
      color: #c5c8ce;
    .vm-datepicker-cells-cell
      width: 28px;
      height: 28px;
      cursor: pointer;
      position: relative;
      margin-bottom: 3px;
      &-disabled
        background: #f7f7f7;
        cursor: not-allowed;
        color: #c5c8ce;
      &-disabled:hover em
        color: inherit !important;
        background: inherit !important;
    .vm-datepicker-cells-cell-start
      border-bottom-right-radius: 0 !important;
      border-top-right-radius: 0 !important;
    .vm-datepicker-cells-cell-end
      border-bottom-left-radius: 0 !important;
      border-top-left-radius: 0 !important;
    .vm-datepicker-cells-cell-selected
      border-radius: 50%;
      color: #fff;
      &:hover em
        border-radius: 50%;
        color: #fff;
    .vm-datepicker-cells-cell-prev-month
      em
        color: #c5c8ce;
    .vm-datepicker-cells-cell-next-month
      em
        color: #c5c8ce;
    .vm-datepicker-cells-cell-week-label
      em
        color: #c5c8ce;
    .vm-datepicker-cells-cell-range
      &:before
        content: "";
        display: block;
        border-radius: 0;
        border: 0;
        position: absolute;
        top: 0;
        bottom: 0;
        left: -2px;
        right: -2px;
      em
        color: #fff;
        position: relative;
        z-index: 1;
    .vm-datepicker-cells-cell-today em
      position: relative;
      &:after
        content: "";
        display: block;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        position: absolute;
        top: 1px;
        right: 1px;
    span
      display: inline-block;
      width: 24px;
      height: 24px;
      em
        display: inline-block;
        width: 24px;
        height: 24px;
        line-height: 24px;
        margin: 2px;
        font-style: normal;
        border-radius: 50%;
        text-align: center;
        transition: all .2s ease-in-out;
  &-header
    height: 32px;
    line-height: 32px;
    text-align: center;
    span
      display: inline-block;
      cursor: pointer;
      border-radius: 5px;
      .vm-datepicker-header-label span
        width: 110px;
    .vm-datepicker-panel-icon-btn
      display: inline-block;
      width: 20px;
      height: 24px;
      line-height: 26px;
      margin-top: 4px;
      text-align: center;
      color: #c5c8ce;
      transition: color .2s ease-in-out;
      border-radius: 5px;
  &--icon
    position: absolute;
    right: 5px;
    font-size: 1.0625em;
    top: 50%;
    cursor: pointer;
    transform: translate(0,-50%);
    transition: all .2s ease;
.vm-datepicker--label
  padding-left 5px;
  font-size: .85rem
  color $vm-label-color


for colorx, i in $vm-colors
  .vm-datepicker-{colorx}
    .vm-datepicker--item
      &.activex
        background: var(colorx, .1)
        color: var(colorx);
        font-weight: bold;
    .vm-datepicker-header span:hover
      background: var(colorx, .02)
      color: var(colorx);
    .vm-datepicker-panel-shortcut:hover
      color: var(colorx)
      background: var(colorx, .02)
    .vm-datepicker-cells-cell:hover em
      background: var(colorx, .1)
    .vm-datepicker-cells-cell-selected
      background: var(colorx)
      &:hover em
        background: var(colorx)
    .vm-datepicker-cells-cell-range
      &:before
        background: var(colorx)
    .vm-datepicker-cells-focused
      em
        box-shadow: 0 0 0 1px var(colorx) inset;
    .vm-datepicker-cells-cell-today em
      &:after
        background: var(colorx)
    .vm-datepicker--label-span
      font-size: 0.8em
      font-style: italic
      color: var(colorx)
  .input-datepicker-label-{colorx}--active
    color: var(colorx)
  .datepicker-validate-{colorx}
    .vm-datepicker-rel
      .vm-editor-editor
        border-color: var(colorx)
      .vm-datepicker--icon
        color var(colorx)
