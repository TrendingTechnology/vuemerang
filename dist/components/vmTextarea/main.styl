.vm-con-textarea
  width: 100%
  position relative
  border: 1px solid rgba(0,0,0,.08)
  box-shadow: 0px 0px 0px 0px rgba(0,0,0,.0)
  border-radius: 6px
  transition: boxShadow .25s ease, border .25s ease, transform .25s ease
  // overflow hidden
  transform: translate(0, 0px)
  margin-bottom: 2px
  &.focusx
    box-shadow: 0px 4px 16px 0px rgba(0,0,0,.05)
    border: 1px solid var('primary', 1) !important;

.vm-textarea--label
  padding-left 5px;
  font-size: .85rem
  color rgba(0,0,0,.7)

.vm-textarea
  resize: none
  border-radius: 6px
  border: 0px solid rgba(0,0,0,.0)
  display: block
  padding: 9px
  color: rgba(0,0,0,.8)
  font-size: .8rem
  width: 100%
  max-width 100%
  min-width 100%
  background: transparent
  &:focus
    resize: auto !important
    ~
      .count
        opacity 1

  &:disabled
    background #f5f7fb
    cursor default
    pointer-events none

.textarea-danger
  border: 1px solid var('danger', .4)
  box-shadow: 0px 4px 20px 0px var('danger', .1)
  .vm-textarea
    color var('danger', .8)
  .count
    background: var('danger', 1)

.textarea-danger
  border: 1px solid var('danger', 1)

.textarea-success
  border: 1px solid var('success', 1)

.textarea-warning
  border: 1px solid var('warning', 1)

.vm-textarea--count
  position: absolute
  right 14px
  bottom: 0px
  transform: translate(0, 100%)
  // background: rgb(250,250,250)
  padding: 1px 6px
  font-size: .6rem

  border-radius: 0px 0px 5px 5px
  font-weight: bold
  box-shadow: 0px 4px 20px 0px rgba(0,0,0,.05)
  cursor default
  background: var('primary', 1)
  color rgba(255,255,255,1)
  opacity .3
  transition: all .25s ease

for colorx, i in $vm-colors
  .vm-textarea-{colorx}.focusx
    .vm-textarea--label
      color: var(colorx)
      .vm-textarea--label-span
        font-size: 0.8em
        font-style: italic
        color: var(colorx)
