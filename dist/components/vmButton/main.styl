.vm-button
  transition: all .2s ease;
  padding: 10px;
  border: 0px;
  border-radius: $vm-radio
  cursor: pointer;
  position: relative;
  overflow: hidden;
  color: rgb(255, 255, 255);
  box-sizing: border-box;
  background: transparent
  &.vm-radius
    border-radius: 50%
  &.large
    padding 12px
    font-size: 1em;
  &.small
    padding 7px
    font-size: .7em;
  &:disabled
    opacity $vm-disabled-opacity
    cursor: default
    pointer-events: none
.vm-button--icon
  z-index: 100;
  display: block;
  position: relative;
  font-size: 1.125em;
  transition: all .2s ease;
.vm-button--background
  border-radius: 50%;
  width: 10px;
  position: absolute;
  height: 10px;
  z-index: 0;
  transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  box-shadow:inset 0px 0px 60px 0px rgba(255, 255, 255,.5);
.vm-button--text
  position: relative;
  color: inherit
  display: inline-block;
  transition: $vm-transition;
&.vm-button-border
  padding: 9px;
&.vm-button-border,&.vm-button-flat
  &.isActive
    .vm-button--text,.vm-button--icon
      color: rgb(255, 255, 255) !important

.vm-button-filled
  &:hover
    box-shadow: 0px 9px 28px -9px

.vm-button-line
  padding: 9px 10px;
  border-radius: 0px
  overflow: visible;
  border-style: solid;
  .vm-button-linex
    transition: all .2s ease;
    width: 0%;
    position: absolute;
    left: 0px;
    bottom: -2px;
    height: 2px;
  &:hover
    .vm-button--text,.vm-button--icon
      transform: translate(0,2px);
    .vm-button-linex
      width: 100% !important

.vm-button-gradient
  &:hover
    transform: translate(0,-2px);
    box-shadow: 0px 8px 25px -8px rgb(170, 170, 170)
  &:active
    transform: translate(0,0px);
    box-shadow: 0px 8px 0px -8px rgb(170, 170, 170)
.vm-button-relief
  padding: 10px;
  &:active
    transform: translate(0,3px);
    box-shadow: none !important;

.includeIcon
  display: flex;
  align-items: center;
  justify-content: center;
  float: left;

.includeIconOnly
  width: 38px !important
  height 38px !important
  &.large
    width: 44px !important
    height 44px !important
    font-size: 0.7em;
  &.small
    width: 28px !important
    height 28px !important
    .vm-icon
      font-size: .85rem

for colorx, i in $vm-colors

  .vm-button-{colorx}
    &.vm-button-filled //type filled
      // background: $vm-colors[colorx]
      background: var(colorx)
      &:hover
        box-shadow: 0px 8px 25px -8px var(colorx)
    &.vm-button-border,&.vm-button-flat //type border
     border: 1px solid var(colorx)
     background: transparent !important
     color: var(colorx)
     .vm-button--text
       &.isActive
         color: rgb(255, 255, 255) !important
     &:hover
       background: var(colorx, .08) !important
     .vm-button-backgroundx
       background: var(colorx);
       box-shadow:inset 0px 0px 60px 0px var(colorx);
    &.vm-button-flat //type flat
      border: none !important
    &.vm-button-line // type line
      color: var(colorx)
      border-color: var(colorx, .2)
      .vm-button-linex
        background: var(colorx)
    &.vm-button-gradient // type Gradient
      if colorx == 'success' {
        background: rgb(0,100,250)
        background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .6) 100%) !important
      }
      else if colorx == 'warning' {
        background: rgb(250,250,250)
        background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%) !important
      }
      else {
        // background: linear-gradient(30deg, var(colorx) 0%, spin($vm-colors[colorx],30deg) 100%) !important
      background: rgb(100,0,100)
      background-image: linear-gradient(30deg, var(colorx, 1) 0%, var(colorx, .5) 100%) !important
      }
      text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.3);

    &.vm-button-relief
      background: var(colorx, 1)
      if colorx == 'dark' {
        box-shadow: 0 -3px 0 0 rgba(255,255,255,.1) inset
      } else {
        box-shadow: 0 -3px 0 0 rgba(0,0,0,.2) inset
      }
