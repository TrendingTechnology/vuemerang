//animations
.dialog-t-enter, .dialog-t-leave-to /* .dialog-t-leave-active below version 2.1.8 */ {
  opacity: 0 !important;
}

//box dialog
.dialog-t-enter .vm-dialog/* .fade-leave-active below version 2.1.8 */ {
  transform: scale(.9) !important;

}
.dialog-t-leave-to .vm-dialog/* .fade-leave-active below version 2.1.8 */ {
  transform: scale(.9) !important;
  // animation: rebound .3s;
}

@keyframes rebound {
    0%   {transform: scale(.9)}
    50%   {transform: scale(1.08)}
    100% {transform: scale(1)}
}


// cancel / text
.dialog-t-enter .vm-dialog-text, .dialog-t-leave-to .vm-dialog-text {
  opacity: 0;
  transform: translate(-15px) !important;
}

.dialog-t-enter header h4, .dialog-t-leave-to header h4 {
  transform: translate(-50px);
  opacity: 0;
}

// buttons
.dialog-t-enter footer button, .dialog-t-leave-to footer button {
  transform: translate(0,10px);
  opacity: 0;
}



.con-vm-dialog
  transition: all .2s;
  width: 100%;
  height: 100%;
  position: fixed;
  left: 100px;
  top: 100px;
  left: 0px;
  top: 0px;
  z-index: 200000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  .vm-dialog-dark
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    position: absolute;
    left: 0px;
    top: 0px;
    height: 100%;
    z-index: 10;
    transition: all .250s ease;
    opacity: 0.3;
  .small
    max-width: 400px;
  .medium
    max-width: 800px;
  .large
    max-width: 1200px;
  .vm-dialog
    transition: all .2s;
    z-index: 100;
    width: calc(100% - 50px);
    margin: 10px;
    border-radius: 10px;
    box-shadow: 0px 5px 20px 0px rgba(0, 0, 0, 0.1)
    background: rgb(255, 255, 255);
    animation: rebound .3s;
    &.locked
      // background: rgb(3, 41, 203) !important;
      transform: scale(1.02);
    .vm-dialog-text
      padding: 10px 20px;
      font-size: 0.875em;
      transition: all .23s ease .1s;
    header
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-radius: 5px 5px;
      position: relative;
      .con-title-after
        width: 100%;
        position: relative;
        overflow: hidden;
        border-radius: 5px 5px 0px 0px;
      h4
        transition: all .23s ease .1s;
        padding-top: 20px;
        padding-left: 20px;
        font-size: 1rem;
      button
        margin-top: 5px;
        margin-right: 5px;
    footer
      display: flex;
      align-items: center;
      justify-content: flex-start;
      position: relative;
      button
        margin: 11px 15px;
        &:nth-last-child(2)
          margin-left: auto !important;
      &:before
        content: '';
        top: 0px;
        left: 0px;
        position: absolute;
        width: 90%;
        margin-left: 5%;
        height: 1px;
        background: rgba(0, 0, 0, 0.05);

.vm-alert {
  z-index: 200001 !important;
}

